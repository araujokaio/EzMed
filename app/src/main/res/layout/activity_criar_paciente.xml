<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezmed.ezmed.CriarPacienteActivity">

    <EditText
        android:id="@+id/criarPacienteTxtNome"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Nome Completo do Paciente"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/criarPacienteTxtDataNascimento"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Data de Nascimento do Paciente"
        android:inputType="date"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintTop_toBottomOf="@+id/criarPacienteTxtNome"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/criarPacienteTxtPeso"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Peso em Kilos do Paciente"
        android:inputType="numberDecimal"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintTop_toBottomOf="@+id/criarPacienteTxtDataNascimento"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/criarPacienteTxtAltura"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Altura em Metros do Paciente"
        android:inputType="numberDecimal"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintTop_toBottomOf="@+id/criarPacienteTxtPeso"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Criar/Atualizar Paciente!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@+id/criarPacienteTxtAltura"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
