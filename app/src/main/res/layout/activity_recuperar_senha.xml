<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezmed.ezmed.RecuperarSenhaActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logoezmed"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/recuperarSenhaBtnRecuperarSenha"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recuperarSenhaTxtEmailSenha"
        android:layout_centerHorizontal="true"
        android:text="Recuperar Senha"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/recuperarSenhaTxtEmailSenha" />

    <EditText
        android:id="@+id/recuperarSenhaTxtEmailSenha"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="E-mail ou UsuÃ¡rio"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="136dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/recuperarSenhaBtnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:onClick="clickVoltar"
        android:text="Voltar"
        app:layout_constraintTop_toBottomOf="@+id/recuperarSenhaBtnRecuperarSenha"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/recuperarSenhaBtnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickLimpar"
        android:text="Limpar"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/recuperarSenhaBtnRecuperarSenha"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
