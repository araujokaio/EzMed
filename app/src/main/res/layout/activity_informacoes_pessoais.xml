<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezmed.ezmed.InformacoesPessoaisActivity">

    <Button
        android:id="@+id/informacoesPessoaisBtnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Sair"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/informacoesPessoaisBtnAvancar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/informacoesPessoaisTxtDataNascimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/informacoesPessoaisTxtPeso"
        android:layout_alignStart="@+id/informacoesPessoaisTxtPeso"
        android:ems="10"
        android:hint="Data de Nascimento"
        android:inputType="date"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/informacoesPessoaisTxtNome"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/informacoesPessoaisTxtPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Peso"
        android:inputType="numberDecimal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/informacoesPessoaisTxtAltura"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/informacoesPessoaisTxtAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/informacoesPessoaisTxtPeso"
        android:layout_below="@+id/informacoesPessoaisTxtPeso"
        android:ems="10"
        android:hint="Altura"
        android:inputType="numberDecimal"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/informacoesPessoaisTxtDataNascimento"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/informacoesPessoaisTxtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/informacoesPessoaisTxtDataNascimento"
        android:layout_alignStart="@+id/informacoesPessoaisTxtDataNascimento"
        android:ems="10"
        android:hint="Nome Completo"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/informacoesPessoaisBtnAvancar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/informacoesPessoaisBtnSair"
        android:layout_alignBottom="@+id/informacoesPessoaisBtnSair"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="49dp"
        android:text="AvanÃ§ar"
        app:layout_constraintTop_toBottomOf="@+id/informacoesPessoaisTxtPeso"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
